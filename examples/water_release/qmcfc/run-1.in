   rcoulomb   = 9.0;
   long_range = none;
   #longrange_nc = on;

# NON-COULOMBICS
#-----------------------------------------
   #noncoulomb = lj;

# INTEGRATOR
#-----------------------------------------
   integrator = v-verlet;

