#-----------------------------------------
   temp       = 298.15;
   thermostat = berendsen;
   #manostat   = berendsen;
   #pressure   = 1.013;
#  nscale = 500;
   #cell-list = on;
   #cell-number = 10;
#  friction   = 0.035;

# VIRIAL
# ----------------------------------------
    virial = molecular;

# FILES
#-----------------------------------------
   start_file   = h2o-qmcf.rst; 

   output_file  = testset_02___mm_md_h2o-1.out; 
   info_file    = testset_02___mm_md_h2o-1.info;
   energy_file  = testset_02___mm_md_h2o-1.en; 
