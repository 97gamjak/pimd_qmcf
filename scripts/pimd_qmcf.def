Bootstrap: docker
From: ubuntu:22.04

%post
    apt-get update
    apt-get -y install cmake

    apt-get -y install software-properties-common
    add-apt-repository ppa:ubuntu-toolchain-r/test
    apt-get update
    apt-get -y install gcc-13
    apt-get -y install g++-13
    apt-get update
    update-alternatives --install /usr/bin/gcc gcc /usr/bin/gcc-13 13 --slave /usr/bin/g++ g++ /usr/bin/g++-13

    apt-get -y install libboost-all-dev

    apt-get -y install git
    git clone https://github.com/97gamjak/pimd_qmcf.git
    cd pimd_qmcf
    mkdir build
    cd build
    cmake .. -DCMAKE_BUILD_TYPE=Release
    make -j6

%runscript
    pimd_qmcf/build/apps/pimd_qmcf