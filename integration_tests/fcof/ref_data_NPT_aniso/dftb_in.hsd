Geometry = GenFormat {
<<< "geom.gen"
}

# Job-type - Geometry optimisation using
# the LBFGS optimizer
Driver = {}


Hamiltonian = DFTB {
  charge = 0
  SCC = Yes
  SCCTolerance = 1.0e-5
  MaxSccIterations = 250
  #Solver = MAGMA{}
  Eigensolver = DivideAndConquer {}
  ThirdOrderFull = Yes
  DampXH = Yes
  DampXHExponent = 4.0
  ReadInitialCharges = Yes
  
  # Sampling of the Briullouin zone according to 
  # the Monkhorst-Pack scheme
  KPointsAndWeights = {
    0.0 0.0 0.0 1.0
  }
 # DFTB3 dispersion parameter from manual
  Dispersion = DftD3 {
   Damping = BeckeJohnson {
    a1 = 0.746 
    a2 = 4.191
    }
   s6 = 1.0
   s8 = 3.209
  }
# Hubbard Derivatives used from 3ob dftb.org site
  HubbardDerivs {
    C  = -0.1492
    H  = -0.1857
    N  = -0.1535 
    F  = -0.1623
  }



  SlaterKosterFiles = Type2FileNames {
    Prefix = "/home/stk/skf-files/3ob-3-1/"
    Separator = "-"
    Suffix = ".skf"
  }


  MaxAngularMomentum {
    C  = "p"
    N  = "p"
    H  = "s"
    F  = "p"
  }
  
  Filling = Fermi {
    Temperature [Kelvin] = 0.0
  }
}

Options {}

Analysis = {
   MullikenAnalysis = Yes
   CalculateForces = Yes
}  


ParserOptions {
  ParserVersion = 5
}
